@model IEnumerable<ProftaakASP_S2.Models.ChatViewModel>

@{
    ViewData["Title"] = "Overview";
}

<h2>Chat overzicht</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Onderwerp
            </th>
            <th>
                Naam vrijwilliger
            </th>
            <th>
                Datum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ChatViewModel chat in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => chat.QuestionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => chat.VolunteerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => chat.TimeStamp)
                </td>
                <td>
                    @Html.ActionLink("Open", "OpenChat", new { id = chat.ChatLogId, volunteerName = chat.VolunteerName, careRecipientName = chat.CareRecipientName, volunteerId = chat.VolunteerId })|

                    @if (chat.Status)
                    {
                        @Html.ActionLink("Stop chat", "ChangeStatusChat", new { chatlogId = chat.ChatLogId })
                    }
                    else
                    {
                        @Html.ActionLink("Start chat", "ChangeStatusChat", new { chatlogId = chat.ChatLogId })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
