@using Models
@model IEnumerable<ProftaakASP_S2.Models.ChatViewModel>

@{
    ViewData["Title"] = "Overview";
}

<h2>Chat overzicht</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Onderwerp
        </th>
        <th>
            Naam vrijwilliger
        </th>
        <th>
            Datum
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.ActionLink("Open", "OpenChat", new { id=item.ChatLogID, volunteerName=item.VolunteerName, careRecipientName=item.CareRecipientName })             
            </td>
        </tr>
}
    </tbody>
</table>
