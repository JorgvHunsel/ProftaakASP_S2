@{
    string currentRole = Context.Request.Cookies["role"];
    ViewBag.Username = Context.Request.Cookies["name"];

    switch (currentRole)
    {
        case "CareRecipient":
            Layout = "~/Views/CareRecipient/_Layout.cshtml";

            break;
        case "Volunteer":
            Layout = "~/Views/Volunteer/_Layout.cshtml";
            break;
        case "Professional":
            Layout = "~/Views/Professional/_Layout.cshtml";
            break;
        case "Admin":
            Layout = "~/Views/Admin/_Layout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_LayoutHome.cshtml";
            break;
    }
}


