@using Microsoft.AspNetCore.Http
@{
    string currentRole = "";

    if (User.IsInRole("Admin"))
    {
        currentRole = "Admin";
    }
    else if (User.IsInRole("CareRecipient"))
    {
        currentRole = "CareRecipient";
    }
    else if(User.IsInRole("Volunteer"))
    {
        currentRole = "Volunteer";
    }
    else if (User.IsInRole("Professional"))
    {
        currentRole = "Professional";
    }

    switch (currentRole)
    {
        case "CareRecipient":
            Layout = "~/Views/Shared/_LayoutCareRecipient.cshtml";

            break;
        case "Volunteer":
            Layout = "~/Views/Shared/_LayoutVolunteer.cshtml";
            break;
        case "Professional":
            Layout = "~/Views/Shared/_LayoutProfessional.cshtml";
            break;
        case "Admin":
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}


