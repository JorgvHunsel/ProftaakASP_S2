@model ProftaakASP_S2.Models.LinkToProfessionalViewModel

@{
    ViewData["Title"] = "LinkCareProfessional";
}

<h2>LinkCareProfessional</h2>

<div>
    <h4>LinkToProfessionalViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>

<div>
    <form asp-action="LinkCareToProf" asp-controller="Admin">
        <input type="hidden" value ="@Model.CareRecipient.UserId" name="careId"/>
        <select name="profId">
            <option value="">Selecteer professional</option>

            @for (int i = 0; i < Model.ProfessionalList.Count; i++)
            {
                <option value="@Model.ProfessionalList[i].UserId">
                    @Model.ProfessionalList[i].FirstName @Model.ProfessionalList[i].LastName
                </option>
            }
        </select>
        <input type="submit"/>
    </form>


</div>

