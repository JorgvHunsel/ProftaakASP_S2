@using Models
@model IEnumerable<ProftaakASP_S2.Models.ChatViewModel>

@{
    ViewData["Title"] = "Administrator - ChatLog Overview";
}

<h2>Chat Overview</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Onderwerp
            </th>
            <th>
                Naam Hulpbehoevende
            </th>
            <th>
                Naam Vrijwilliger
            </th>
            <th>
                Datum
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CareRecipientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolunteerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.ActionLink("Verwijder", "ChatLogDelete", new ChatViewModel(item.ChatLogID));
            </td>
        </tr>
        }
    </tbody>
</table>
