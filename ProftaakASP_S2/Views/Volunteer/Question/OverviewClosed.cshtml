@model IEnumerable<ProftaakASP_S2.Models.QuestionViewModel>

@{
    ViewData["Title"] = "OverviewClosed";
}

<h2>Overzicht gesloten hulpvragen</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Onderwerp
        </th>
        <th>
            Hulpbehoevende
        </th>
        <th>
            Datum
        </th>
        <th>
            Urgent
        </th>
        <th>
            Categorie
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (QuestionViewModel item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CareRecipientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Urgency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
        </tr>
    }
    </tbody>
</table>
